{
  "openapi": "3.0.0",
  "info": {
    "title": "Users API",
    "description": "This is a user api",
    "version": "1.0.0",
    "contact": {
      "email": "rrcosta04@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Creates a new user",
        "description": "Creates a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "User name example",
                "email": "example@mail.com"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "This email is already in use!"
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "Lists all users",
        "description": "Lists all users",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "description": "The user id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "Date"
                    },
                    "updated_at": {
                      "type": "Date"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "You must be a administrator!"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["User"],
        "summary": "Lists a user",
        "description": "Lists a user's profile info",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "description": "The user id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucess",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "Date"
                    },
                    "updated_at": {
                      "type": "Date"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/users/{userId}/admin": {
      "patch": {
        "tags": ["User"],
        "summary": "Patches a user",
        "description": "Transforms a user into an admin",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "description": "The user id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "Date"
                    },
                    "updated_at": {
                      "type": "Date"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  }
}
